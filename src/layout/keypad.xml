<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/keypad">

    <TextView
        android:id="@+id/all_clear"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/softcorner"
        android:gravity="center"
        android:text="C"
        android:textColor="#00FF00"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/backspace_textview"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/all_clear"
        android:background="@drawable/softcorner"
        android:gravity="center"
        android:text="BS"
        android:textColor="#00FF00"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="/"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/backspace_textview"
        android:id="@+id/divide"
        android:background="@drawable/softcorner"
        />

    <TextView
        android:id="@+id/multiply"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/divide"
        android:background="@drawable/softcorner"
        android:gravity="center"
        android:text="*"
        android:textColor="#87CEEB"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="-"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/divide"
        android:background="@drawable/softcorner"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/divide"
        android:id="@+id/subract"
        />

    <TextView
        android:id="@+id/addition"
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:layout_below="@+id/subract"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/divide"
        android:background="@drawable/softcorner"
        android:gravity="center"
        android:text="+"
        android:textColor="#87CEEB"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/all_clear"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/softcorner"
        android:gravity="center"
        android:text="7"
        android:textColor="#87CEEB"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="8"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/all_clear"
        android:background="@drawable/softcorner"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/seven"
        android:id="@+id/eight"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="9"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/all_clear"
        android:background="@drawable/softcorner"
        android:layout_toEndOf="@+id/eight"
        android:layout_marginTop="10dp"
        android:id="@+id/nine"
        />

    <TextView
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/seven"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/softcorner"
        android:gravity="center"
        android:text="4"
        android:textColor="#87CEEB"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="5"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/eight"
        android:background="@drawable/softcorner"
        android:layout_toEndOf="@+id/four"
        android:id="@+id/five"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="6"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/nine"
        android:background="@drawable/softcorner"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/five"
        android:id="@+id/six"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="1"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/four"
        android:background="@drawable/softcorner"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/one"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="2"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/five"
        android:background="@drawable/softcorner"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/one"
        android:id="@+id/two"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="3"
        android:gravity="center_horizontal|top"
        android:textSize="50sp"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/six"
        android:background="@drawable/softcorner"
        android:layout_toEndOf="@+id/two"
        android:id="@+id/three"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="0"
        android:gravity="center_horizontal|top"
        android:textSize="50sp"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/one"
        android:background="@drawable/softcorner"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/zero"
        />

    <TextView
        android:id="@+id/double_zero"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/three"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/two"
        android:background="@drawable/softcorner"
        android:gravity="center_horizontal|top"
        android:text="00"
        android:textColor="#87CEEB"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="."
        android:gravity="center_horizontal|top"
        android:textSize="50sp"
        android:textColor="#87CEEB"
        android:textStyle="bold"
        android:layout_below="@+id/two"
        android:background="@drawable/softcorner"
        android:layout_toEndOf="@+id/zero"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/dot"
        />

    <TextView
        android:id="@+id/equal"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/addition"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/double_zero"
        android:background="@drawable/softcorner"
        android:gravity="center_horizontal|top"
        android:text="="
        android:textColor="#87CEEB"
        android:textSize="50sp"
        android:textStyle="bold" />
</RelativeLayout>
